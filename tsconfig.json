{
    "compilerOptions": {
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "baseUrl": "./src",
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "utils/*": ["./utils/*"],
            "popup/*": ["./popup/*"],
            "background/*": ["./background/*"],
            "options/*": ["./options/*"],
            "content/*": ["./content/*"],
            "assets/*": ["./assets/*"],
            "components/*": ["./components/*"],
            "types/*": ["./types/*"],
            "@redux/*": ["./@redux/*"]
        }
    }
}
